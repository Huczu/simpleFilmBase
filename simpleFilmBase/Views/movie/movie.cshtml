@model simpleFilmBase.Models.GroupedMovie

@{
    ViewBag.Title = Html.DisplayFor(model => model.title);
}

<h2>@Html.DisplayFor(model => model.title)</h2>

<div>
    <h4>@Html.DisplayFor(model => model.original_title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Vote
        </dt>

        <dd>
            @Html.DisplayFor(model => model.movie_average)
        </dd>

        <dt>
            Genre
        </dt>

        <dd>
            @foreach (string elem in Model.genre)
            {
                @Html.DisplayFor(elems => elem)
                @:&nbsp;
            }
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.desc)
        </dd>

    </dl>
</div>
